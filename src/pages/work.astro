---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_WORK } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <!-- bg-neutral-800 text-gray-400 -->
  <body
    class="w-2xl mx-auto min-h-screen flex flex-col justify-between"
  >
    <Header />
    <main class="flex flex-col justify-start grow">
      <h1 class="text-3xl font-semibold">{SITE_DESCRIPTION}</h1>
      <section>
        <h2>My latest posts</h2>
        <div>
    <ul>
      {
        SITE_WORK.map((work) => (
          <li class="my-4">
            <a href={`/blog/${work.role}/`} class="flex justify-between">
              <h4 class="text-lg text-white">{work.role}</h4>
              <p class="date">
                {/* <FormattedDate date={post.data.pubDate} /> */}
              </p>
            </a>
          </li>
        ))
      }
    </ul>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>