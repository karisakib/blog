---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { SITE_TITLE, SITE_DESCRIPTION, SITE_PROJECTS } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <!-- bg-neutral-800 text-gray-400 -->
  <body class="w-2xl mx-auto min-h-screen flex flex-col justify-between">
    <Header />
    <main class="flex flex-col justify-start grow">
     <h1 class="text-4xl pt-10 font-black">Things I've Built</h1>
      <section class="py-10">
        <ul class="flex flex-col gap-1 mt-6">
                {
        SITE_PROJECTS.map((project) => (
          <li class="my-4">
            <a href={`/blog/${project.name}/`} class="flex justify-between">
              <h4 class="text-lg text-white">{project.name}</h4>
              <p class="date">
                {/* <FormattedDate date={post.data.pubDate} /> */}
              </p>
            </a>
          </li>
        ))
      }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
